<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
  <meta>
    <author>Tom Hughes-Croucher</author>
  </meta>
  <bindings>
    <select itemPath="response.results.result" produces="XML">
      <urls>
        <url>http://services.sunlightlabs.com/api/legislators.search.xml</url>
      </urls>
      <inputs>
          <key id='name' type='xs:string' paramType='query' required="true" />
          <key id='threshold' type='xs:string' paramType='query' required="false" />
          <key id='all_legislators' type='xs:string' paramType='query' required="false" />
          <key id='apikey' type='xs:string' paramType='query' required="true" />
      </inputs>
    </select> 
  </bindings>
</table>